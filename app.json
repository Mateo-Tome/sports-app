{
  "expo": {
    "name": "sport-app",
    "slug": "sport-app",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "sportapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-video",
      "ffmpeg-kit-react-native"
    ],
    "ios": {
      "bundleIdentifier": "com.mateotome2133.sportapp",
      "infoPlist": {
        "NSCameraUsageDescription": "This app records matches.",
        "NSMicrophoneUsageDescription": "This app records match audio.",
        "NSPhotoLibraryAddUsageDescription": "We add your videos to albums for organization.",
        "NSPhotoLibraryUsageDescription": "We access your library to organize recordings."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mateotome2133.sportapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "591d53da-7aa5-4094-bcf7-b97d2895c348"
      }
    }
  }
}



