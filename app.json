{
  "expo": {
    "name": "QuickClip",
    "slug": "quickclip",
    "version": "1.0.0",
    "orientation": "default",
    "scheme": "quickclip",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "icon": "./assets/images/icon.png",

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      "expo-video",
      "sentry-expo"
    ],

    "ios": {
      "bundleIdentifier": "com.mateotome2133.sportapp",
      "supportsTablet": true,
      "icon": "./assets/images/icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "This app records matches.",
        "NSMicrophoneUsageDescription": "This app records match audio.",
        "NSPhotoLibraryAddUsageDescription": "We add your videos to albums for organization.",
        "NSPhotoLibraryUsageDescription": "We access your library to organize recordings."
      }
    },

    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.mateotome2133.sportapp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#000000"
      }
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "591d53da-7aa5-4094-bcf7-b97d2895c348"
      }
    }
  }
}
