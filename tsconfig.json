{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",            // ðŸ‘ˆ  THIS is the key
    "strict": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "types": ["node", "react", "react-native"],
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app",
    "src",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}


